[alias]
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	ci = commit
    co = checkout
    diffc = diff --cached
	set-identity = "! git config user.name \"$(git config user.$1.name)\"; git config user.email \"$(git config user.$1.email)\"; git config user.signingkey \"$(git config user.$1.signingkey)\"; :"

[core]
    editor = nvim

[merge]
    conflictstyle = diff3

[push]
    default = upstream

